# use ctrl left/right
"\e[1;5C": forward-word
"\e[1;5D": backward-word

# use alt left/right
"\e[1;3C": forward-word
"\e[1;3D": backward-word

# colors in completion, since bash 4.3
set colored-stats on

# case insensitive completion
set completion-ignore-case on

# if a tab-completed file is a symlink to a directory,
# treat it like a directory not a file
set mark-symlinked-directories on

# only necessary to press TAB once
set show-all-if-ambiguous on

# show item type like 'ls -F', displays /,*,@ next to name
set visible-stats on
